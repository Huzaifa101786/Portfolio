<h1 class="text-center">ADD NEW PROJECT</h1>
<div class="container mt-5 p-3">
    <form method="post" action="Add_Proj">
        <div class="mb-3">           
            <label for="" class="form-label">Project Name</label>
            <input type="text" class="form-control" asp-for="Proj_Name" />
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Project Type</label>
            <input type="text" class="form-control" asp-for="Proj_Type" />
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Project Language</label>
            <input type="text" class="form-control" asp-for="Proj_Language" />
        </div>

        @*images + video to be added*@

        <div class="mb-3">
            <label for="" class="form-label">Description</label>
            <textarea type="text" class="form-control" asp-for="Proj_Description"></textarea>
        </div>

        <input type="submit" class="btn btn-primary" Submit />

    </form>
</div>

